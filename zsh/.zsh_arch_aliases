# package manager aliases
alias remove='yay -R'                                               # uninstall package
alias update='yay -Syu --noconfirm --needed && flatpak update -y'   # update system/package/aur and flatpak apps
alias install='yay -S --noconfirm --needed'                         # install new package
alias search='yay -Ss'                                              # list available package
alias list='yay -Qe'                                                # list installed packages
alias info='yay -Qi'                                                # show package info
alias clean='yay -Sc'                                               # clean cache
alias cleanall='yay -Scc'                                           # clean all cache
