# Helpful aliases
alias mkdir='mkdir -pv' # Always mkdir a path (this doesn't inhibit functionality to make a single dir) 
alias cls='clear' # clear terminal
alias  l='eza -lh  --icons=auto' # long list
alias ls='eza -1   --icons=auto' # short list
alias ll='eza -ilha --icons=auto --sort=name --group-directories-first' # long list all
alias ld='eza -lhD --icons=auto' # long list dirs
alias la='eza -la  --icons=auto' # hidden list
alias cp='cp -irv' # copy with prompt
alias mv='mv -iv' # move with prompt
alias rm='rm -iv' # remove with prompt
alias ln='ln -s' # create symbolic link
alias ps='ps auxf' # list all processes with a hierarchy tree.
alias top='nvtop' # system monitor.

# package manager aliases
alias remove='yay -Rns ' # uninstall package
alias update='sudo pacman -Syu --noconfirm  && yay -Syu --noconfirm  && flatpak update -y' # update system/package/aur and flatpak apps
alias install='yay -S --needed --noconfirm' # install new package
alias search='yay -Ss ' # list available package
alias list='yay -Qs ' # list installed packages
alias unused='yay -Qdt' # list unused packages

alias pc='yay -Sc' # remove unused cache
alias po='sudo pacman -Qtdq  | sudo pacman -Rns  -' # remove unused packages, also try > sudo pacman -Qqd | sudo pacman -Rsu --print -

alias code='code --disable-gpu'                              # gui code editor
alias brave='brave --enable-chrome-browser-cloud-management' # gui web browser
alias vim='nvim'                                             # neovim

# flatpak aliases
alias fl='flatpak list'
alias fu='flatpak update -y'
alias fi='flatpak install -y'
alias frn='flatpak run'
alias frm='flatpak uninstall'
alias fs='flatpak search'

# git aliases
alias gs='git status'
alias ga='git add .'
alias pull='git pull'
alias push='git push'
alias commit='git commit -m'
alias clone='git clone'
alias fetch='git fetch'
alias checkout='git checkout'
alias branch='git branch'
alias merge='git merge'
alias rebase='git rebase'
alias stash='git stash'
alias log='git log'

